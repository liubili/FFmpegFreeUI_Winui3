<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FFmpegWinUI.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FFmpegWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="32" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" RowSpacing="20">
        <Grid.Resources>
            <!-- 统一按钮样式 -->
            <Style x:Key="ActionButtonStyle" TargetType="Button">
                <Setter Property="MinWidth" Value="120"/>
                <Setter Property="Height" Value="36"/>
                <Setter Property="CornerRadius" Value="4"/>
            </Style>
        </Grid.Resources>

        <!-- 1. 页面标题 -->
        <TextBlock Text="FFmpeg 配置"
                 Style="{StaticResource TitleTextBlockStyle}"
                 Margin="0,0,0,24"/>

        <!-- 2. FFmpeg bin 路径输入和提示 -->
        <StackPanel Grid.Row="1" Spacing="8">
            <TextBlock Text="FFmpeg bin 路径" 
                     Style="{StaticResource SubtitleTextBlockStyle}"/>
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBox x:Name="FfmpegPathBox" 
                        Width="400" 
                        PlaceholderText="请输入FFmpeg的bin目录路径"
                        ToolTipService.ToolTip="输入FFmpeg可执行文件（如ffmpeg.exe）所在的bin目录路径"/>
                <Button Click="OnSelectFfmpegPath"
                        Style="{StaticResource ActionButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE8DA;"/>
                        <TextBlock Text="选择目录"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>

        <!-- 3. 下载区域 -->
        <Grid Grid.Row="2" RowSpacing="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>  <!-- 新增行定义 -->
            </Grid.RowDefinitions>

            <!-- 下载按钮和打开按钮 -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button x:Name="DownloadFfmpegBtn" 
                        Style="{StaticResource AccentButtonStyle}"
                        Click="OnDownloadFfmpeg">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE896;"/>
                        <TextBlock Text="下载最新FFmpeg"/>
                    </StackPanel>
                </Button>
                <!-- 添加 winget 安装按钮 -->
                <Button x:Name="WingetInstallBtn"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="OnWingetInstall">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE719;"/>  <!-- 使用商店图标 -->
                        <TextBlock Text="通过 winget 安装"/>
                    </StackPanel>
                    <ToolTipService.ToolTip>
                        <ToolTip Content="使用 Windows Package Manager (winget) 安装 FFmpeg"/>
                    </ToolTipService.ToolTip>
                </Button>
                <Button x:Name="OpenFfmpegFolderBtn" 
                        Click="OnOpenFfmpegFolder" 
                        Visibility="Collapsed"
                        Style="{StaticResource ActionButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE838;"/>
                        <TextBlock Text="打开目录"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- PATH设置选项 -->
            <CheckBox x:Name="RegisterToPathCheckBox" 
                      Grid.Row="1"
                      Content="下载后添加到系统 PATH" 
                      IsChecked="True"/>

            <!-- 进度条 -->
            <Grid Grid.Row="2" x:Name="ProgressGrid" Visibility="Collapsed">
                <ProgressBar x:Name="DownloadProgressBar" 
                            Height="4" 
                            Minimum="0" 
                            Maximum="100"
                            Margin="0,8,0,0"/>
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12,8"
                        Margin="0,20,0,0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <ProgressRing IsActive="True" Width="16" Height="16"/>
                        <TextBlock x:Name="InfoTextBlock" 
                                 Style="{StaticResource CaptionTextBlockStyle}"
                                 VerticalAlignment="Center"/>
                        <InfoBadge x:Name="ErrorInfoBadge" 
                                  Foreground="{ThemeResource SystemFillColorCriticalBrush}" 
                                  Visibility="Collapsed"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Winget 安装状态 -->
            <Border x:Name="WingetStatusBorder"
                    Grid.Row="3"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12,8"
                    Margin="0,8,0,0"
                    Visibility="Collapsed">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <ProgressRing x:Name="WingetProgressRing" 
                                 IsActive="False" 
                                 Width="16" 
                                 Height="16"/>
                    <TextBlock x:Name="WingetStatusText"
                              Style="{StaticResource CaptionTextBlockStyle}"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 4. 信息卡片 -->
        <InfoBar Grid.Row="3"
                 x:Name="StatusInfoBar"
                 IsOpen="False"
                 Severity="Informational"
                 Title="FFmpeg 状态"/>
    </Grid>
</Page>
